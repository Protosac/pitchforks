extends layout

block content
	.list-group.col-sm-6
		h3.event-title= protest.name
		p
			span.glyphicon.glyphicon-map-marker
			= ' ' + protest.location + ', '
			span.glyphicon.glyphicon-calendar 
			= ' ' + protest.date + ' '
			p= protest.description
		if (user)
			p
				a.btn.btn-default(href="/protests/" + protest.event_id + "/edit") Edit 
				span= ' '
					button.btn.btn-danger.join Join
						span.badge
				span= ' '
					button.btn.btn-warning(id="fistPump")= 'Fist Pump '
						span.badge(id="fistBadge")
	.col-sm-6
		iframe(width="100%",
  		height="100%",
  		frameborder="3",
  		style="border: solid 3px black",
  		src="https://www.google.com/maps/embed/v1/search?key=AIzaSyBtXqzdNepSM3-6I1YVPteqGPt4sDK6keA&q="+ protest.city + "&q=" + protest.state)

	.col-sm-12
		a.btn.btn-default(href="/news") Articles 
		= articles
